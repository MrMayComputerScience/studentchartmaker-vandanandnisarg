<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.gradesController"
            alignment="CENTER">
    <Label fx:id="CenterText" alignment="CENTER" text="Creating a Grades Chart" textAlignment="CENTER" />
    <Label fx:id="SpacerText" alignment="CENTER" text="" textAlignment="CENTER" />
    <Label fx:id="SFName" alignment="CENTER" text="" textAlignment="CENTER" />
    <Button fx:id="loadStudentButtonGR" text="Select Student" onAction="#loadStudents"/>
    <Label fx:id="SpacerText1" alignment="CENTER" text="" textAlignment="CENTER" />
    <TextField fx:id="ColumnNumber" maxWidth="75"/>
    <Button fx:id="loadColumnNum" text="Select Columns" onAction="#loadColumns"/>
    <Label fx:id="SpacerText2" alignment="CENTER" text="" textAlignment="CENTER" />
    <Label fx:id="HFName" alignment="CENTER" text="" textAlignment="CENTER" />
    <Button fx:id="loadHeader" text="Select Header" onAction="#loadHeader"/>
    <Label fx:id="SpacerText3" alignment="CENTER" text="" textAlignment="CENTER" />
    <Button fx:id="createButton" text="Create Chart" onAction="#createChart"/>
    <Label fx:id="SpacerText4" alignment="CENTER" text="" textAlignment="CENTER" />
    <Label fx:id="SpacerText5" alignment="CENTER" text="" textAlignment="CENTER" />
    <Label fx:id="Error" alignment="CENTER" text="" textAlignment="CENTER" />
</VBox>
